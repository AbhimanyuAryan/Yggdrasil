# Simple toolchain template file for clang running on i686 Windows
set(CMAKE_SYSTEM_NAME Windows)
set(CMAKE_SYSTEM_PROCESSOR i686)

set(CMAKE_SYSROOT /opt/i686-w64-mingw32/i686-w64-mingw32/sys-root/)
set(CMAKE_INSTALL_PREFIX /workspace/destdir/)

set(CMAKE_C_COMPILER /opt/x86_64-linux-gnu/tools/clang)
set(CMAKE_CXX_COMPILER /opt/x86_64-linux-gnu/tools/clang++)

set(CMAKE_C_FLAGS "-target i686-w64-mingw32 --sysroot /opt/i686-w64-mingw32/i686-w64-mingw32/sys-root")
set(CMAKE_CXX_FLAGS "-target i686-w64-mingw32 --sysroot /opt/i686-w64-mingw32/i686-w64-mingw32/sys-root")

if( $ENV{CC} MATCHES ccache )
    set_property(GLOBAL PROPERTY RULE_LAUNCH_COMPILE ccache)
endif()
